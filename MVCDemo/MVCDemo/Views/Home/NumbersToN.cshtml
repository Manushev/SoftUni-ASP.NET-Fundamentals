@model int

@{
    ViewData["Title"] = "NumbersToN Page";
}

<h3>Nums 1 ... @ViewBag.Count</h3>
<ul>
    @for (int i = 1; i <= ViewBag.Count; i++)
    {
        <li>@i</li>
    }
</ul>

<!-- Form for updating the count -->
<form asp-action="NumbersToN" method="post">
    <input type="number" id="count" name="count" required>
    <button type="submit">Submit</button>
</form>